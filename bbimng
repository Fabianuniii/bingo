import random
import argparse

def read_words_from_file(file_path):
    with open(file_path, "r") as file:
        return [line.strip() for line in file]

def generate_bingo_card(size, words):
    return random.sample(words, size * size)

def display_bingo_card(card, size):
    for i in range(size):
        print(" | ".join(card[i * size : (i + 1) * size]))

def main():
    parser = argparse.ArgumentParser(description="Generiere eine Bingo-Karte aus einer Textdatei")
    parser.add_argument("-xaxis", type=int, default=5, help="Anzahl der Felder in der Breite")
    parser.add_argument("-yaxis", type=int, default=5, help="Anzahl der Felder in der Höhe")
    parser.add_argument("-wordfile", required=True, help="Pfad und Dateiname der Textdatei mit den Bingo-Wörtern")
    args = parser.parse_args()

    bingo_woerter = read_words_from_file(args.wordfile)
    bingo_karte = generate_bingo_card(args.xaxis, bingo_woerter)
    display_bingo_card(bingo_karte, args.xaxis)

if __name__ == "__main__":
    main()
