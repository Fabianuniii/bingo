import random
import argparse

# Liste der Bingo-Wörter
bingo_woerter = [
    "Synergie", "Rating", "Wertschöpfend", "Benefits", "Ergebnisorientiert",
    "Nachhaltig", "Hut aufhaben", "Visionen", "Zielführend", "Global Player",
    "Rund sein", "Szenario", "Diversity", "Corporate Identitiy", "Fokussieren",
    "Impact", "Target", "Benchmark", "Herausforderung(en)/Challenges", "Gadget",
    "Value", "Smart", "Web 2.0 oder 3.0", "Qualität", "Big Picture", "Revolution",
    "Pro-aktiv", "Game-changing", "Blog", "Community", "Social Media", "SOA",
    "Skalierbar", "Return on Invest (ROI)", "Wissenstransfer", "Best Practice",
    "Positionierung/Positionieren", "Committen", "Geforwarded", "Transparent",
    "Open Innovation", "Out-of-the-box", "Dissemination", "Blockchain", "Skills",
    "Gap", "Follower", "Win-Win", "Kernkompetenz", "Portfolioprüfung– Werkstück A– Alternativ"
]

def generate_bingo_card(size):
    # Zufällige Auswahl von Wörtern für die Bingo-Karte
    return random.sample(bingo_woerter, size * size)

def display_bingo_card(card, size):
    for i in range(size):
        print(" | ".join(card[i * size : (i + 1) * size]))

def main():
    parser = argparse.ArgumentParser(description="Generiere eine Bingo-Karte")
    parser.add_argument("-xaxis", type=int, default=5, help="Anzahl der Felder in der Breite")
    parser.add_argument("-yaxis", type=int, default=5, help="Anzahl der Felder in der Höhe")
    args = parser.parse_args()

    bingo_karte = generate_bingo_card(args.xaxis)
    display_bingo_card(bingo_karte, args.xaxis)

if __name__ == "__main__":
    main()
